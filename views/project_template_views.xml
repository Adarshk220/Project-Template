<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_template_view_form" model="ir.ui.view">
        <field name="name">project.template.form</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <form string="project template">
                <header>
                    <button name="action_create_project" class="oe_highlight" string="Create Project"
                            type="object" help="Click here to Create Project"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="task_name"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="manager_id"/>
                            <field name="date_start" string="Planned Date" widget="daterange"
                                   options='{"end_date_field": "date", "always_range": "1"}'/>
                            <field name="date" invisible="1" required="date_start"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <group>
                                <field name="task_ids">
                                    <tree create="1" editable="bottom">
                                        <field name="name" string="Task Names"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="project_template_view_tree" model="ir.ui.view">
        <field name="name">project.template.tree</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <tree string="project template" create="1">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
    <record id="project_template_action" model="ir.actions.act_window">
        <field name="name">Project Template</field>
        <field name="res_model">project.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="project_template"
              name="Templates"
              parent="project.menu_main_pm"
              sequence="12"/>
    <menuitem id="project_template_project"
              name="Project Templates"
              parent="project_template"
              action="project_template_action"
              sequence="1"/>
</odoo>