<?xml version="1.0"?>
<odoo>
    <record id="project_project_form_view_inherit" model="ir.ui.view">
        <field name="name">project.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button id="create_project_template" name="action_create_project_template" invisible="button_click != False"
                        string="Create Project Template" type="object" class="btn-primary"/>
                <field name="button_click" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>